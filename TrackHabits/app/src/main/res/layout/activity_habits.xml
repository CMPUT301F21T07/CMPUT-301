<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:visibility="visible">

    <com.google.android.material.tabs.TabLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="0dp"
        android:layout_marginRight="0dp"
        android:background="@color/white"
        android:clickable="true"
        android:focusable="true"
        app:tabIndicatorColor="@android:color/darker_gray"
        app:tabTextAppearance="@style/TextAppearance.AppCompat.Medium"
        app:tabTextColor="@color/teal_700">

        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your Habits" />

        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Habits to Follow" />
    </com.google.android.material.tabs.TabLayout>

    <Switch
        android:id="@+id/YHSwitch"
        android:layout_width="match_parent"
        android:layout_height="68dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="49dp"
        android:layout_marginEnd="0dp"
        android:layout_marginRight="0dp"
        android:backgroundTint="@color/cardview_dark_background"
        android:checked="false"
        android:gravity="center"
        android:switchMinWidth="75dp"
        android:text="All Habits"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textColor="@android:color/black"
        android:textColorHighlight="@color/black"
        android:textColorLink="@color/black"
        android:textSize="24sp"
        android:textStyle="bold" />

    <ListView
        android:id="@+id/habits_list_view"
        android:layout_width="wrap_content"
        android:layout_height="511dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="104dp"
        android:layout_marginEnd="0dp"
        android:layout_marginRight="0dp" />


    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/open_menu_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom|end"
        android:layout_marginEnd="7dp"
        android:layout_marginRight="7dp"
        android:layout_marginBottom="30dp"
        android:clickable="true"
        android:focusable="true"
        app:srcCompat="@drawable/ic_baseline_add_circle_outline_24"
        tools:ignore="SpeakableTextPresentCheck,SpeakableTextPresentCheck,VectorDrawableCompat" />

    <LinearLayout
        android:id="@+id/add_habit_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom|end"
        android:layout_marginEnd="7dp"
        android:layout_marginRight="7dp"
        android:layout_marginBottom="95dp"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add new habit:"
            android:layout_gravity="center_vertical"
            android:textColor="@color/white"
            android:background="@drawable/rounded_corner"
            android:padding="5dp"/>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/add_habit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat ="@android:drawable/ic_input_add"
            app:backgroundTint="@android:color/holo_green_light"
            app:fabCustomSize="45dp"
            app:fabSize="mini"
            app:tint = "@color/white"
            android:outlineSpotShadowColor="@color/white"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/view_events_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom|end"
        android:layout_marginEnd="7dp"
        android:layout_marginRight="7dp"
        android:layout_marginBottom="150dp"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Events:"
            android:layout_gravity="center_vertical"
            android:textColor="@color/white"
            android:background="@drawable/rounded_corner"
            android:padding="5dp"/>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/view_habit_events"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:backgroundTint="@android:color/holo_orange_light"
            app:fabCustomSize="45dp"
            app:srcCompat ="@drawable/ic_baseline_calendar_today_24"
            app:fabSize="mini"
            tools:ignore="VectorDrawableCompat"
            app:tint = "@color/white"
            android:outlineSpotShadowColor="@color/white"/>

    </LinearLayout>


    <LinearLayout
        android:id="@+id/view_friends_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom|end"
        android:layout_marginEnd="7dp"
        android:layout_marginRight="7dp"
        android:layout_marginBottom="205dp"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Friends:"
            android:layout_gravity="center_vertical"
            android:textColor="@color/white"
            android:background="@drawable/rounded_corner"
            android:padding="5dp"/>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/view_friends"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat ="@drawable/ic_baseline_supervised_user_circle_24"
            app:backgroundTint="@android:color/holo_purple"
            app:fabCustomSize="45dp"
            app:fabSize="mini"
            tools:ignore="VectorDrawableCompat"
            app:tint = "@color/white"
            android:outlineSpotShadowColor="@color/white"/>

    </LinearLayout>



    <LinearLayout
        android:id="@+id/search_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom|end"
        android:layout_marginEnd="7dp"
        android:layout_marginRight="7dp"
        android:layout_marginBottom="260dp"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Search Friends:"
            android:layout_gravity="center_vertical"
            android:textColor="@color/white"
            android:background="@drawable/rounded_corner"
            android:padding="5dp"/>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/search_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            app:srcCompat = "@android:drawable/ic_menu_search"
            app:backgroundTint="@android:color/holo_purple"
            app:fabCustomSize="45dp"
            app:fabSize="mini"
            app:tint = "@color/white"
            android:outlineSpotShadowColor="@color/white"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/log_out_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom|end"
        android:layout_marginEnd="7dp"
        android:layout_marginRight="7dp"
        android:layout_marginBottom="310dp"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Log out:"
            android:layout_gravity="center_vertical"
            android:textColor="@color/white"
            android:background="@drawable/rounded_corner"
            android:padding="5dp"/>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/log_out_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            app:srcCompat = "@android:drawable/ic_lock_power_off"
            app:backgroundTint="@android:color/holo_red_dark"
            app:fabCustomSize="45dp"
            app:fabSize="mini"
            app:tint = "@color/white"
            android:outlineSpotShadowColor="@color/white"
            />

    </LinearLayout>



    </RelativeLayout>