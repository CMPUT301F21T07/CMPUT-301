<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_horizontal"
        android:text="Habit Name:"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/view_habit_name"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_horizontal"
        android:textSize="20sp"
        android:layout_below="@+id/name"/>

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_horizontal"
        android:text="Habit Title:"
        android:textSize="25sp"
        android:layout_below="@+id/view_habit_name"/>

    <TextView
        android:id="@+id/view_habit_title"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:maxLength="20"
        android:textSize="20sp"
        android:gravity="center_horizontal"
        android:layout_below="@+id/title"/>

    <TextView
        android:id="@+id/reason"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_horizontal"
        android:text="Reason:"
        android:textSize="25sp"
        android:layout_below="@+id/view_habit_title"/>


    <TextView
        android:id="@+id/view_habit_reason"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_horizontal"
        android:textSize="20sp"
        android:maxLength="30"
        android:layout_below="@+id/reason"/>

    <TextView
        android:id="@+id/started"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_horizontal"
        android:text="Start Date:"
        android:textSize="25sp"
        android:layout_below="@+id/view_habit_reason"/>

    <TextView
        android:id="@+id/view_start_date"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:textSize="20sp"
        android:layout_below="@id/started"
        android:gravity="center_horizontal" />


</RelativeLayout>