<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/view_habit_name"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_horizontal" />

    <TextView
        android:id="@+id/view_habit_title"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:maxLength="20"
        android:layout_below="@+id/view_habit_name"/>


    <TextView
        android:id="@+id/view_habit_reason"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_horizontal"
        android:maxLength="30"
        android:layout_below="@+id/view_habit_title"/>

    <TextView
        android:id="@+id/view_start_date"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/view_habit_reason"
        android:gravity="center_horizontal" />







</RelativeLayout>